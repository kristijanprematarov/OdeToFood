@page "{id}"

@model OdeToFood.Pages.Restaurants.EditModel

<form method="post">

    <input type="hidden" asp-for="Restaurant.Id" />

    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input class="form-control" asp-for="Restaurant.Name" />
        <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Restaurant.Cuisine"></label>
        <select class="form-control" asp-for="Restaurant.Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()">
        </select>
        <span asp-validation-for="Restaurant.Cuisine" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-block btn-success mt-3" />
</form>
