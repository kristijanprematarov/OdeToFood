@using OdeToFood.Entities
@model Restaurant

<h1>Create Restaurant</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Cuisine"></label>
        <select class="form-control" asp-for="Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()">
        </select>
        <span asp-validation-for="Cuisine" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-block btn-success mt-3" />
</form>
